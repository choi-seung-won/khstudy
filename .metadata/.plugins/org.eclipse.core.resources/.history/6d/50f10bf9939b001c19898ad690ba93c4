package day0304;
import java.util.Scanner;

//사용자로부터 번호, 이름 영어점수, 수학점수, 국어점수를

// 차례대로 입력받아서
// 다음과 같은 양식으로 출력되는 프로그램을 작성하시오

// 결과)
// 번호: 0##번 이름: ###
// 국어: 0##점 영어: 0##점 수학: 0##점
// 총점: 0##점 평균: 0##.##점

public class Ex02GradeBook {

    public static void main(String[] args) {
        
        Scanner scanner = new Scanner(System.in);
        
        System.out.println("번호 입력\n");
        
        //scanner.nextLine();

        System.out.printf("번호 입력 > %s \n",scanner);
        
        int number = scanner.nextInt();
        //scanner.nextLine();
        
        String name = scanner.nextLine();

        System.out.printf("이름 입력 > %s \n",scanner);
        
        //scanner.nextLine();
        
        int score_eng = scanner.nextInt();

        System.out.printf("영어점수 입력 > %s \n", scanner);
        
        int score_math = scanner.nextInt();

        scanner.nextLine();

        System.out.printf("수학점수 입력 > %s \n", scanner);

        int score_Nlang = scanner.nextInt();
        
        scanner.nextLine();

        System.out.printf("국어점수 입력 > %s \n", scanner);
        
        
        System.out.printf("번호 : [0%d번] 이름 : [%s],",number, name);
        
        System.out.printf("국어 : [0%d점] 영어 : [0%d점] 수학 : [0%d점]", score_Nlang,score_eng,score_math);
        
        int sum = score_Nlang + score_math + score_eng;
        
        int sump = sum / 3;
        
        System.out.printf("총점 : [%d]\n",sum);
        
        System.out.printf("평균 : [%d]\n",sump);
       
        
        
        
        // TODO Auto-generated method stub

    }

}
