package day0308;

import java.util.*;

public class StarPrinter02 {

    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);
        System.out.println("****");
        System.out.println("별찍기");
        System.out.println("****");
        
        System.out.println("값을 입력");
        System.out.print(">");
        int UserNum = scanner.nextInt();
        scanner.nextLine();
        
        
        for( int i = UserNum; i < 0; i++  ) {
            
            System.out.print("*");
            
        }System.out.println();
        
    }

}
